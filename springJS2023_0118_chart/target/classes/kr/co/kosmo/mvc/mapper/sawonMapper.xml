<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ksawon">
	<!-- config에서 제공해주는 deptvo 반환을 deptvo로 한다. -->
	<!-- DeptVO안에 sawon의 List가 있기 때문에 type = "deptvo" 이다. -->
	<resultMap type="deptvo" id="deptsawonResult">
		<id property="deptno" column="deptno" javaType="int" />
		<result property="dname" column="dname" />
		<!-- 1 = n 관계 -->
		<!-- dept = sawon(n) -->
		<!-- List<SawonVO> collection지정 property = "sawon"인 이유는? private List<SawonVO> 
			sawon이기 때문에 -->
		<collection property="sawon" javaType="java.util.List"
			ofType="sawonvo">
			<id property="sabun" column="sabun" javaType="int" />
			<result property="saname" column="saname" />
			<result property="sajob" column="sajob" />
			<result property="sapay" column="sapay" />
		</collection>
	</resultMap>

	<select id="deptList" parameterType="int"
		resultMap="deptsawonResult">
		select s.sabun,s.saname,s.sajob, s.sapay,d.deptno,d.dname
		from sawon s,dept d
		where d.deptno = s.deptno and d.deptno=#{deptno}
	</select>


	<!-- association -->
	<resultMap type="sawonvo" id="sawonphoneResult">
		<id property="sabun" column="sabun" />
		<result property="saname" column="saname" />
		<result property="sajob" column="sajob" />
		<!-- property = "sphone" getSphone() column="sabun" => s.sabun sabun javaType="sphonevo" 
			: 참조하는 실제 VO -->
		<association property="sphone" column="sabun"
			javaType="sphonevo">
			<id property="pnum" column="pnum" />
			<result property="pmodel" column="pmodel" />
			<result property="phnum" column="phnum" />
			<result property="pdate" column="pdate" />
		</association>
	</resultMap>


	<select id="sawonlist" resultMap="sawonphoneResult">
		select
		s.sabun,s.saname,s.sajob,p.pnum,p.pmodel,p.phnum,p.pdate
		from sawon s, sawon_phone p
		where s.sabun = p.pnum(+)
	</select>
	
	<insert id="procedure2" parameterType="sawonvo" statementType="CALLABLE">
		{call ps_in(#{saname},#{deptno},#{sajob},#{sapay},#{gender})}
	</insert>
	
	<resultMap type="hashmap" id="proceMap"/>
	<select id="procedure1" statementType="CALLABLE">
		{ call sawon_in_dept(#{deptno},#{result,mode=OUT,
		jdbcType=CURSOR, javaType=ResultSet , resultMap=proceMap0})
		}
	</select>
</mapper>
  